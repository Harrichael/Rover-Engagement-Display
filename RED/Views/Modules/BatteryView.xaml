                <TextBlock Text="Temperature 7" Width="100" DockPanel.Dock="Left" Margin="0 0 5 0" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Temperature7, StringFormat=' {0: 00.00}°C'}" DockPanel.Dock="Left" Margin="0 0 5 0" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Left" />
                <ItemsControl ItemsSource="{Binding Temperature7Contexts, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type contexts:BarContext}">
                            <ProgressBar Minimum="{Binding DataContext.MinimumTemperature, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                         Maximum="{Binding DataContext.MaximumTemperature, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                         Orientation="Vertical" Background="{StaticResource InputBackground}"
                                         Value="{Binding Value, Mode=OneWay}">
                                <ProgressBar.ToolTip>
                                    <ToolTip>
                                        <ToolTip.Content>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="Value: {0: 00.00}°C, Received at: {1:HH:mm:ss:ff}">
                                                        <Binding Path="Value"></Binding>
                                                        <Binding Path="ReceivedOn"></Binding>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </ToolTip.Content>
                                    </ToolTip>
                                </ProgressBar.ToolTip>
                            </ProgressBar>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
