<UserControl x:Class="RED.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <mui:ModernTab Layout="List" SelectedSource="/Views\Settings\ConfigurationView.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="configuration" Source="/Views\Settings\ConfigurationView.xaml" />
                <mui:Link DisplayName="appearance" Source="/Views\Settings\SettingsAppearanceView.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
